<html>
    <head>
        <title>회원가입</title>
        <style>
            h3 {color:black; text-align: center; margin-top: 200px;}
        </style>
    </head>

    <body>
        <h3>회원가입</h3>
        <form action="receive3" method="POST" style="margin: auto; width: 300px;">
            <br>
            <legend>ID</legend>
            <label>
                <input type="text" name="id" style="margin: auto; width: 300px;" required> 
            </label><br>
            <br>
            <legend>비밀번호</legend>
            <label>
                <input type="password" name="password" style="margin: auto; width: 300px;" required> 
            </label><br>
            <br>
            <legend>이름</legend>
            <label>
                <input type="text" name="name" style="margin: auto; width: 300px;" required> 
            </label><br>
            <!-- <input type="text" name="name" placeholder="이름" required> <br> -->
            <br>
            <legend>이메일</legend>
            <label>
                <input type="text" name="email" style="margin: auto; width: 300px;"> 
            </label><br>
            <!-- <input type="radio" name="gender" value="남">남 -->
            <br>
            <legend>성별
            <input type="radio" name="gender" id="gender_1" value="남">
            <label for="gender_1">남</label>
            <input type="radio" name="gender" id="gender_1" value="여">
            <label for="gender_1">여</label> 
            </legend><br>
            <legend>생년월일
            <select name="year">
                <% for (var i=1950; i<=2022; i++){%>
                    <option value="<%=i%>"><%=i%></option>
                <% } %>
            </select>년
            <select name="month">
                <% for (var i=1; i<=12; i++){%>
                    <option value="<%=i%>"><%=i%></option>
                <% } %>
            </select>월
            <select name="day">
                <% for (var i=1; i<=31; i++){%>
                    <option value="<%=i%>"><%=i%></option>
                <% } %>
            </select>일
            </legend><br>

            <button style="margin: auto; width: 300px; background-color: green; border: 0ch;">가입하기</button><br>
            <br>
            <input type="reset" value="다시 작성하기" style="margin: auto; width: 300px; background-color:aliceblue; border: 0ch;">
        </form>
    </body>
</html>
